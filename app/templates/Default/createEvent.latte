{* Latte template *}

{block content}
    <h2>Create new billing event</h2>
    {form addEventForm}
        <div class="form-group">
            {label title /}
            {input title}
        </div>
        <div class="form-group">
            {label day_in_month /}
            {input day_in_month}
        </div>
        <div class="form-group">
            {label amount /}
            {input amount}
        </div>
        <div class="form-group">
            {input payment_method}
        </div>
        <div class="checkbox">
            {label trashed}
                {input trashed}
            {/label}
        </div>
        {input submit}
    {/form}

